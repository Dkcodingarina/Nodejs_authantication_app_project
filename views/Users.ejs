<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body
    class="bg-dark text-light"
    style="width: 500px; margin: auto; padding-top: 30px"
  >
    <div class="container text-center">
      <% users.forEach(user => { %>
      <div class="bg-dark mb-5 p-3 border border-warning rounded">
        <img
          src="<%= user.profileimage %>"
          alt="Profile Image"
          style="
            width: 150px;
            height: 150px;
            border-radius: 100%;
            border: 2px solid rgb(255, 212, 18);
          "
        />
        <h3 class="mt-3">Name: <%= user.name %></h3>
        <h3>Email: <%= user.email %></h3>
      </div>
      <% }) %>

      <div class="mt-5">
        <a href="/" class="btn btn-danger mx-3">Log Out</a>
        <a href="/register" class="btn btn-primary">Register</a>
      </div>
    </div>
  </body>
</html>
